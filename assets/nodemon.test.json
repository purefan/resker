{
    "verbose": true,
    "watch": [
        "test/*.js",
        "controller/*.js",
        "nodemon.test.json",
        "config/development.js",
        "assets/nodemon.test.json",
        "lib/**/*.*",
        "middleware/**/*.*",
        "model/*.js"
    ],
    "env": {
        "NODE_ENV": "development",
        "X_API_KEY": "123456789012",
        "MONGO_HOST": "localhost",
        "HTTP_PORT": 8011,
        "DEBUG": "*"
    },
    "exec": "clear && mocha --timeout 65000 --colors --bail \"./test/*.js\""
}